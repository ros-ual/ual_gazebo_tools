<launch>

    <arg name="multi" default="false"/>

    <rosparam param="/use_sim_time">true</rosparam>

    <!-- Launch Gazebo simulation TODO: world location? -->
    <node pkg="ual_sim_tools" type="launch_gzworld.py" name="gazebo_world" output="screen"
        args="-physics=ode -world=$(find ual_sim_tools)/config/empty_light.world">
        <rosparam param="sim_origin">[37.558542, -5.931074, 7.89]</rosparam><!-- [lat,lon,alt] -->
    </node>

    <!-- Launch robot id=1 -->
    <include file="$(find ual_sim_tools)/launch/spawn_robot.launch" unless="$(arg multi)">
        <arg name="id" value="1"/>
        <arg name="robot_model" value="mbzirc"/>
        <arg name="material" value="Orange"/>
        <arg name="x" default="0"/>
        <arg name="y" default="0"/>
        <arg name="z" default="0"/>
        <arg name="yaw" default="0"/>
    </include>

    <group if="$(arg multi)">
        <!-- Launch robot id=1 -->
        <include file="$(find ual_sim_tools)/launch/spawn_robot.launch" ns="uav_1">
            <arg name="id" value="1"/>
            <arg name="material" value="Orange"/>
            <arg name="x" default="0"/>
            <arg name="y" default="0"/>
            <arg name="z" default="0"/>
            <arg name="yaw" default="0"/>
        </include>
        <!-- Launch robot id=2 -->
        <include file="$(find ual_sim_tools)/launch/spawn_robot.launch" ns="uav_2">
            <arg name="id" value="2"/>
            <arg name="material" value="Indigo"/>
            <arg name="x" default="-10"/>
            <arg name="y" default="10"/>
            <arg name="z" default="0"/>
            <arg name="yaw" default="0"/>
        </include>
        <!-- Launch robot id=3 -->
        <include file="$(find ual_sim_tools)/launch/spawn_robot.launch" ns="uav_3">
            <arg name="id" value="3"/>
            <arg name="material" value="ZincYellow"/>
            <arg name="x" default="10"/>
            <arg name="y" default="10"/>
            <arg name="z" default="0"/>
            <arg name="yaw" default="0"/>
        </include>
    </group>

</launch>
